<h2>Register:</h2>
 
<% form_for @user do |f| %>
  <%= f.error_messages %>
<p>
  <%= f.label :name %><br/>
  <%= f.text_field :name%>
</p>
<p>
  <%= f.label :login %><br/>
  <%= f.text_field :login %>
</p>
<p>
   <%= f.label :password %><br/>
   <%= f.password_field :password %>
</p>


<p>
  <%= f.submit "Register" %>
</p>
<% end %>