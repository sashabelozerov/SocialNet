
<% form_for @current_user do |f| %>
  <%= f.error_messages %>
<p>
  <%= f.label :name %><br/>
  <%= f.text_field :name%>
</p>
<p>
  <%= f.label :login %><br/>
  <%= f.text_field :login %>
</p>
<p>
   <%= f.label :password %><br/>
   <%= f.password_field :password %>
</p>

<p>
  <%= f.submit "Update" %>
</p>
<% end %>

<%= link_to 'Back to profile', @current_user %>