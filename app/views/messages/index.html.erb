<h1>Messages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
	<%if @mailbox == "sent" %>
		<th>Addressee</td>
	 <% else %>
		<th>Sender</td>
	 <% end %>
  </tr>
  <% for message in @messages %>
    <tr>
      <td><%=h message.title %></td>
      <td><%=h message.content %></td>
	  <%if @mailbox == "sent" %>
		<td><%=h message.user_target.name %></td>
	  <% else %>
		<td><%=h message.user.name %></td>
	  <% end %>
      <td><%= link_to "Show", message %></td>
      <td><%= link_to "Destroy", message, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to "New Message", new_user_message_path(@current_user) %>
</p>