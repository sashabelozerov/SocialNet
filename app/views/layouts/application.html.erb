<html>
<head>
<title>SocialNet</title>
<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
<%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
<%= stylesheet_link_tag 'main', :media => 'screen' %>
<%= stylesheet_link_tag 'content', :media => 'screen' %>
<%= stylesheet_link_tag 'header', :media => 'screen' %>
<%= stylesheet_link_tag 'footer', :media => 'screen' %>
</head>
<body>
  <div class = "container">
    <div class = "span-24" id = "header">
      <div class ="head">
        <div class ="logo">
          SocialNet
        </div>
        <div class ="authBar">
          <ul>
          <% if !current_user %>
            <li><%= link_to "Register", new_user_url %></li>
            <li><%= link_to "Log In", login_url %></li>
          <% else %>
            <li><%= link_to "My Account", user_url(@current_user) %></li>
            <li><%= link_to "Logout", logout_url, :confirm => "Are you sure you want to logout?" %></li>
          <% end %>
          </ul>
        </div>
        <div class ="alert">
          <% if flash[:error] %>
            <div class = "notice">
              <%= flash[:error] %>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class = "success">
              <%= flash[:notice] %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
	
    <hr class ="space"/>
    <div class = "span-24" id = "content">
      <%= render :partial=>"layouts/#{controller.sub_layout}" %>
      
    </div>
    <hr class ="space"/>
    <div class = "span-24" id = "footer">
        OmSU, 2010
    </div>
  </div>
</body>
</html>
